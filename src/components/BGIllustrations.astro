---
import { illustrationOptions } from '@scripts/assets';
---

<div class="illustrations not-content">
  {
    illustrationOptions && 
    illustrationOptions().map((illustration, i) => {
      return (
        <div class="illustration">
          <p>{illustration.name}</p>
          <div class="svg" set:html={illustration.svg} />
        </div>
      );
    })
  }
</div>

<style>
  .illustrations {
    display: grid;
      grid-template-columns: repeat(3, 1fr);
      column-gap: 1rem;
      row-gap: 2rem;;

    .svg {
      height: 4rem;
      width: 4rem;
    }
  }
</style>