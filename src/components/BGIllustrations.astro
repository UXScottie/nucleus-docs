---
import { illustrationOptions } from '@scripts/assets';
---

<div class="illustrations">
  {
    illustrationOptions && 
    illustrationOptions().map((illustration, i) => {
      return (
        <div class="illustration">
          <div class="svg" set:html={illustration.svg} />
          <span class="label">
            <code>{illustration.name}</code>
          </span>
        </div>
      );
    })
  }
</div>

<style>
  .illustrations {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(6rem, 1fr));
    gap: 1rem;
    color: var(--sl-color-white);

    .illustration {
      margin-block-start: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      aspect-ratio: 1 / 1;
      overflow-wrap: anywhere;
    }

    .svg {
      height: 4rem;
      width: 4rem;

      svg {
        fill: currentColor;
      }
    }

    .label {
      text-align: center;
      line-height: normal;

      code {
        font-size: var(--sl-text-2xs);
      }
    }
  }
</style>
