---
const { name } = Astro.props;
import cem from "@connectedhomes/nucleus/custom-elements.json";
import jsdoc from "@connectedhomes/nucleus/ce-doc.json";

const compDetails = cem.tags.find((tag) => tag.name === name);
const jsdocDetails = jsdoc.find((tag) => tag.name === name);

const attributes = compDetails?.attributes;
const properties = compDetails?.properties;
const slots = jsdocDetails?.slots;
const events = compDetails?.events;
---
<div style={attributes?.length > 0 ? '' : 'display:none' }>
  <h3 id="attributes">Attributes</h3>
  <table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Type</th>
        <th>Default</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      {
        attributes?.map((attribute) => {
          return (
            <tr>
              <td>{attribute.name}</td>
              <td>{attribute.type}</td>
              <td>{attribute.default?.replaceAll('"', '')}</td>
              <td>{attribute.description ?? ''}</td>
            </tr>
          );
        })
      }
    </tbody>
  </table>
</div>
<div style={properties?.length > 0 ? '' : 'display:none' }>
  <h3>Properties</h3>
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Type</th>
        <th>Default</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      {
        properties?.map((property) => {
          if (['slottedStyles'].includes(property.name)) {
            return undefined;
          }
          return (
            <tr>
              <td>{property.name}</td>
              <td>{property.type}</td>
              <td>{property.default?.replaceAll('"', '')}</td>
              <td>{property.description}</td>
            </tr>
          );
        })
      }
    </tbody>
  </table>
</div>

<div style={slots?.length > 0 ? '' : 'display:none' }>
  <h3>Slots</h3>
  <table>
    <thead>
      <tr>
        <th>Slot</th>
        <th>Permitted tags</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      {
        slots?.map((slot) => {
          return (
            <tr>
              <td>{slot.name ? slot.name : <code>anonymous</code> }</td>
              <td>{slot.permittedTagNames?.toString() ?? ''}</td>
              <td>{slot.description}</td>
            </tr>
          );
        })
      }
    </tbody>
  </table>
</div>

<div style={events?.length > 0 ? '' : 'display:none' }>
  <h3>Events</h3>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      {
        events?.map((event) => {
          return (
            <tr>
              <td>{event.name}</td>
              <td>{event.description}</td>
            </tr>
          );
        })
      }
    </tbody>
  </table>
</div>
