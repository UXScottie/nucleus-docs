---
import type { Props } from '@astrojs/starlight/props';

const isHomePage = Astro.props.slug === '';
const classList = [
  'content-panel',
  {'homepage': isHomePage}
];
---

<div class:list={classList}>
	<div class="sl-container"><slot /></div>
</div>

<style>
	.content-panel.homepage {
		padding: 1.5rem var(--sl-content-pad-x);
	}

  .content-panel:not(.homepage) {
    padding-inline-start: calc(var(--sl-content-pad-x) * 2);
    padding-inline-end: var(--sl-content-pad-x);
    padding-block-start: 1rem;
    padding-block-end: 0;

    &:nth-child(1) {
      display: none;
    }
  }

  @media(width < 72em) {
    .content-panel:not(.homepage) {
      padding-inline-start: var(--sl-content-pad-x);
    }
  }

  @media (min-width: 72rem) {
    .content-panel .sl-container {
			margin-inline: auto;
		}
	}

	.sl-container {
		max-width: var(--sl-content-width);
	}

	.sl-container > :global(* + *) {
		margin-top: 1.5rem;
	}

</style>
