---
import { icons } from '@connectedhomes/nucleus-util/brands/british-gas';
---

<h2> Icons</h2>
<div class="icons not-content">
  {
    icons && 
    icons.map((icon, i) => {
      return (
        <div class="icon">
          <p>{icon.name}</p>
          <div class="svg" set:html={icon.svg} />
        </div>
      );
    })
  }
</div>

<style>
  .icons {
    display: grid;
      grid-template-columns: repeat(3, 1fr);
      column-gap: 1rem;
      row-gap: 2rem;;

    .svg {
      height: 4rem;
      width: 4rem;
    }
  }
</style>