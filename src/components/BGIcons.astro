---
import { iconOptions } from "@scripts/assets";
---

<div class="icons not-content">
  {
    iconOptions && 
    iconOptions().map((icon, i) => {
      return (
        <div class="icon">
          <p>{icon.name}</p>
          <div class="svg" set:html={icon.svg} />
        </div>
      );
    })
  }
</div>

<style>
  .icons {
    display: grid;
      grid-template-columns: repeat(3, 1fr);
      column-gap: 1rem;
      row-gap: 2rem;;

    .svg {
      height: 4rem;
      width: 4rem;
    }
  }
</style>