---
import { typography } from '@scripts/tokens';

const { level } = Astro.props;

const typographyClass = typography[level];
---

<slot />

<dl class="description-list">
  <p><code>font-family</code></p>
  <div>
    <dt>Value</dt>
    <dd><code>{typographyClass[`THEME_TYPOGRAPHY_${typographyClass.tokenFinder}_FONT_FAMILY`]}</code></dd>
  </div>
  <div>
    <dt>Token</dt>
    <dd><code>{`THEME_TYPOGRAPHY_${typographyClass.tokenFinder}_FONT_FAMILY`}</code></dd>
  </div>
  <p><code>font-weight</code></p>
  <div>
    <dt>Value</dt>
    <dd><code>{typographyClass[`THEME_TYPOGRAPHY_${typographyClass.tokenFinder}_FONT_WEIGHT`]}</code></dd>
  </div>
  <div>
    <dt>Token</dt>
    <dd><code>{`THEME_TYPOGRAPHY_${typographyClass.tokenFinder}_FONT_WEIGHT`}</code></dd>
  </div>
  <p><code>font-size</code></p>
  <div>
    <dt>Value</dt>
    <dd><code>{typographyClass[`THEME_TYPOGRAPHY_${typographyClass.tokenFinder}_FONT_SIZE_VIEWPORT_DEFAULT`]}</code> in the <strong>default</strong> viewport</dd>
  </div>
  <div>
    <dt>Token</dt>
    <dd><code>{`THEME_TYPOGRAPHY_${typographyClass.tokenFinder}_FONT_SIZE_VIEWPORT_DEFAULT`}</code></dd>
  </div>
  <div>
    <dt>Value</dt>
    <dd><code>{typographyClass[`THEME_TYPOGRAPHY_${typographyClass.tokenFinder}_FONT_SIZE_VIEWPORT_BASKETBALL_COURT`]}</code> in the <strong>basketball-court</strong> viewport</dd>
  </div>
  <div>
    <dt>Token</dt>
    <dd><code>{`THEME_TYPOGRAPHY_${typographyClass.tokenFinder}_FONT_SIZE_VIEWPORT_BASKETBALL_COURT`}</code></dd>
  </div>
  <div>
    <dt>Value</dt>
    <dd><code>{typographyClass[`THEME_TYPOGRAPHY_${typographyClass.tokenFinder}_FONT_SIZE_VIEWPORT_RUGBY_PITCH`]}</code> in the <strong>rugby-pitch</strong> viewport</dd>
  </div>
  <div>
    <dt>Token</dt>
    <dd><code>{`THEME_TYPOGRAPHY_${typographyClass.tokenFinder}_FONT_SIZE_VIEWPORT_RUGBY_PITCH`}</code></dd>
  </div>
</dl>
